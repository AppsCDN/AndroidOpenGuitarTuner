<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback" />

    <style name="AppIntroTheme" parent="MaterialTheme.TranslucentStatus">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <!-- Screens background color-->
    <color name="welcome_screen1_bg">#f64c73</color>
    <color name="welcome_screen2_bg">#20d2bb</color>
    <color name="welcome_screen3_bg">#3395ff</color>
    <color name="welcome_screen4_bg">#c873f4</color>

</resources>
